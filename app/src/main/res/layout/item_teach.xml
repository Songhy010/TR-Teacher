<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/iv_height_5"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/iv_height_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_img"
            android:scaleType="centerCrop"
            android:src="@drawable/img_profile"
            android:layout_width="@dimen/iv_height_50"
            android:layout_height="@dimen/iv_height_50">
        </de.hdodenhof.circleimageview.CircleImageView>
        <View
            android:id="@+id/view"
            android:layout_marginLeft="@dimen/iv_height_15"
            android:background="@color/grey_4"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_width="@dimen/iv_height_1"
            android:layout_height="@dimen/iv_height_145"/>
        <TextView
            android:id="@+id/tv_school_name"
            android:layout_marginLeft="@dimen/iv_height_25"
            android:layout_toRightOf="@+id/view"
            android:text="School Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/iv_height_5"
            android:layout_below="@+id/tv_school_name"
            android:id="@+id/tv_class_name"
            android:layout_marginLeft="@dimen/iv_height_25"
            android:layout_toRightOf="@+id/view"
            android:text="Class Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_object"
            android:layout_marginTop="@dimen/iv_height_5"
            android:layout_below="@id/tv_class_name"
            android:layout_marginLeft="@dimen/iv_height_25"
            android:layout_toRightOf="@+id/view"
            android:text="Class Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_shift"
            android:layout_marginTop="@dimen/iv_height_5"
            android:layout_below="@id/tv_object"
            android:layout_marginLeft="@dimen/iv_height_25"
            android:layout_toRightOf="@+id/view"
            android:text="Class Shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_day"
            android:layout_marginTop="@dimen/iv_height_5"
            android:layout_below="@id/tv_shift"
            android:layout_marginLeft="@dimen/iv_height_25"
            android:layout_toRightOf="@+id/view"
            android:text="Monday - Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/iv_height_5"
            android:layout_below="@id/tv_day"
            android:layout_marginLeft="@dimen/iv_height_25"
            android:layout_toRightOf="@+id/view"
            android:text="Class Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>